    <form action="/mail.php" method="POST" class="contact wrapper">
        <div class="contact__area">
            <input type="text" id="contact-name" class="contact__input" name="contact-name" required>
            <label for="contact-name" class="contact__label">Imię</label>
        </div>
        <div class="contact__area">
            <input type="text" id="contact-mail" class="contact__input" name="contact-mail" required>
            <label for="contact-mail" class="contact__label">Mail</label>
        </div>
        <div class="contact__area">
            <input type="text" id="contact-topic" class="contact__input" name="contact-topic" required>
            <label for="contact-topic" class="contact__label">Temat</label>
        </div>
        <div class="contact__area">
            <textarea id="contact-msg" class="contact__textarea" name="contact-msg" rows="4" cols="10"
                required></textarea>
            <label for="contact-msg" class="contact__label">Treść wiadomości</label>
        </div>

        <button class="" type="submit" name="contact-submit">Submit</button>
